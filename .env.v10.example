# ===================================================
# V10 Shop Automation Configuration
# Distributed Lock Edition
# ===================================================

# Server Settings
FLASK_PORT=5080
FLASK_DEBUG=false

# Youngrim (OMS) Settings
YOUNGRIM_URL=http://door.yl.co.kr/oms/main.jsp
YOUNGRIM_LEDGER_URL=http://door.yl.co.kr/oms/ledger_list.jsp
YOUNGRIM_ESTIMATE_URL=http://door.yl.co.kr/oms/estimate_list.jsp
DOWNLOAD_INTERVAL_SEC=1800

# Browser Settings
BROWSER_HEADLESS=true
BROWSER_DEBUG_PORT=9333
BROWSER_PROFILE_NAME=avast_automation_profile
CHROMEDRIVER_VERSION=142

# Retry Settings
MAX_RETRIES=3
RETRY_DELAY_SEC=2

# Ecount (ERP) Settings
ECOUNT_LOGIN_URL=https://login.ecount.com/Login
ECOUNT_COMPANY_CODE=YourCompanyCode
ECOUNT_ID=YourID
ECOUNT_PASSWORD=YourPassword

# Google Sheets Settings
GS_SPREADSHEET_ID=YourSpreadsheetID
GS_SHEET_NAME=erp

# V10: Distributed Lock Settings
ENABLE_DISTRIBUTED_LOCK=true
LOCK_TIMEOUT_SEC=1800
LOCK_SHEET_NAME=processing_lock

# History File (V10 uses separate file)
HISTORY_FILE=v10_history.json
